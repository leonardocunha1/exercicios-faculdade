<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/estilos/montadoras.css">
</head>

<body>
    <h3><%= title %></h3>
    <h4><%= mensagem %></h4>
    <ul>
        <% montadoras.forEach(montadora => { %>
            <li>
                <p class="montadora-name"><%= montadora.nome %></p>
                <p>Ano de fundação: <%= montadora.fundacao %></p>
                <% montadora.carros.forEach(carro => { %>
                    <div class="carro-info">
                        <p>Carro: <%= carro.modelo %></p>
                        <span>Ano: <%= carro.ano %></span>
                    </div>
                <% }); %>
            </li>
        <% }); %>
    </ul>
</body>

</html>
